{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "schedule:daily", ":disableRateLimiting"],
  "timezone": "America/New_York",
  "packageRules": [
    {
      "matchPackagePrefixes": ["@types/"],
      "groupName": "@types Updates"
    },
    {
      "matchPackagePatterns": ["^next"],
      "groupName": "Next.js Updates"
    },
    {
      "matchPackagePatterns": ["^react"],
      "groupName": "React Updates"
    },
    {
      "matchPackagePatterns": ["^jest", "^@testing-library"],
      "groupName": "Testing Updates"
    },
    {
      "matchPackageNames": ["eslint", "prettier"],
      "groupName": "Linting Updates"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
