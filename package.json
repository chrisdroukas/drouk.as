{
  "name": "droukas",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenv -- turbo run build",
    "clean": "dotenv -- turbo run clean && rm -rf node_modules",
    "dev": "dotenv -- turbo run dev --no-cache --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "dotenv -- turbo run lint",
    "test": "dotenv -- turbo run test",
    "ui:add": "pnpm --filter ui ui:add",
    "ui:init": "pnpm --filter ui ui:init",
    "ui:diff": "pnpm --filter ui ui:diff",
    "versions:upgrade": "pnpm dlx npm-check-updates",
    "versions:install": "pnpm install --recursive"
  },
  "devDependencies": {
    "@turbo/gen": "2.0.6",
    "@types/jest": "29.5.12",
    "@types/mdx": "2.0.13",
    "@types/node": "20.14.10",
    "@types/react-dom": "18.3.0",
    "@types/react": "18.3.3",
    "@types/three": "0.166.0",
    "dotenv-cli": "7.4.2",
    "eslint-config-custom": "workspace:*",
    "eslint": "9.7.0",
    "next": "14.2.5",
    "prettier": "3.3.3",
    "turbo": "2.0.6",
    "typescript": "5.5.3"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903",
  "engines": {
    "node": ">=20.15.0"
  }
}
