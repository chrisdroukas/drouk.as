{
  "name": "droukas",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenv -- turbo run build",
    "clean": "dotenv -- turbo run clean && rm -rf node_modules",
    "dev": "dotenv -- turbo run dev --no-cache --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "dotenv -- turbo run lint",
    "test": "dotenv -- turbo run test",
    "ui:add": "pnpm --filter ui ui:add",
    "ui:init": "pnpm --filter ui ui:init",
    "ui:diff": "pnpm --filter ui ui:diff",
    "versions:upgrade": "pnpm dlx npm-check-updates",
    "versions:install": "pnpm install --recursive"
  },
  "devDependencies": {
    "@turbo/gen": "1.12.4",
    "@types/jest": "29.5.12",
    "@types/mdx": "2.0.11",
    "@types/node": "20.11.19",
    "@types/react-dom": "18.2.19",
    "@types/react": "18.2.56",
    "@types/three": "0.161.2",
    "dotenv-cli": "7.3.0",
    "eslint-config-custom": "workspace:*",
    "eslint": "8.56.0",
    "next": "14.1.4",
    "prettier": "3.2.5",
    "turbo": "1.12.4",
    "typescript": "5.3.3"
  },
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">=18.19.0"
  }
}
