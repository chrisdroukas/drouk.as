{
  "name": "droukas",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenv -- turbo run build",
    "clean": "dotenv -- turbo run clean && rm -rf node_modules",
    "dev": "dotenv -- turbo run dev --no-cache --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "dotenv -- turbo run lint",
    "test": "dotenv -- turbo run test",
    "ui:add": "pnpm --filter ui ui:add",
    "ui:init": "pnpm --filter ui ui:init",
    "ui:diff": "pnpm --filter ui ui:diff",
    "versions:upgrade": "pnpm dlx npm-check-updates",
    "versions:install": "pnpm install --recursive"
  },
  "devDependencies": {
    "@turbo/gen": "1.10.16",
    "@types/jest": "29.5.10",
    "@types/mdx": "2.0.10",
    "@types/node": "20.10.3",
    "@types/react-dom": "18.2.17",
    "@types/react": "18.2.42",
    "@types/three": "0.159.0",
    "dotenv-cli": "7.3.0",
    "eslint-config-custom": "workspace:*",
    "eslint": "8.55.0",
    "next": "14.0.3",
    "prettier": "3.1.0",
    "turbo": "1.10.16",
    "typescript": "5.3.2"
  },
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=18.18.2"
  }
}
