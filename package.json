{
  "name": "droukas",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenv -- turbo run build",
    "clean": "dotenv -- turbo run clean && rm -rf node_modules",
    "dev": "dotenv -- turbo run dev --no-cache --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "dotenv -- turbo run lint",
    "test": "dotenv -- turbo run test",
    "ui:add": "pnpm --filter ui ui:add",
    "ui:init": "pnpm --filter ui ui:init",
    "ui:diff": "pnpm --filter ui ui:diff",
    "versions:upgrade": "pnpm dlx npm-check-updates",
    "versions:install": "pnpm install --recursive"
  },
  "devDependencies": {
    "@turbo/gen": "2.0.6",
    "@types/jest": "29.5.12",
    "@types/mdx": "2.0.13",
    "@types/node": "20.14.9",
    "@types/react-dom": "18.3.0",
    "@types/react": "18.3.3",
    "@types/three": "0.166.0",
    "dotenv-cli": "7.4.2",
    "eslint-config-custom": "workspace:*",
    "eslint": "9.6.0",
    "next": "14.2.4",
    "prettier": "3.3.2",
    "turbo": "2.0.6",
    "typescript": "5.5.3"
  },
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": ">=20.15.0"
  }
}
